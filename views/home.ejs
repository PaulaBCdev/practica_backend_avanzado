<%- include('header.ejs') %>

<div class='container'>
    <% if (!session.userId) { %>
    <% // contenido para usuarios NO logeados %>
      <p><a href="/login">Login</a> to acces your products</p>
    <% }else { %>
      <h2 class="mt-4">Products</h2>
      <div class="row row-cols-2 row-cols-md-4 g-2">
        <% products.forEach(product => { %>
          <div class="col">
            <div class="card border-dark mb-3 h-75">
              <img src="/images/<%= product.image %>" class="card-img-top card-img-bottom object-fit-scale h-50" alt="<%= product.name %> image">
              <div class="card-body">
                <h5 class="card-title">
                  <%= product.name %>
                </h5>
                <div class="d-flex my-3 gap-2 flex-wrap">
                  <% product.tags.forEach(tag => { %>
                    <span class="badge rounded-pill text-bg-primary"><%= tag %></span>
                  <% }) %>
                </div>
                <div class="d-flex justify-content-between">
                  <p class="card-text">
                      <%= product.price %>â‚¬
                  </p>
                  <p class="card-text">
                      <a href="/products/delete/<%= product._id %>"><i class="bi bi-trash3"></i></a>
                  </p>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
      </div>
    <% } %>
</div>
  
<%- include('footer.ejs') %>